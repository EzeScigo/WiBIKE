{
  "expo": {
    "name": "Foody",
    "slug": "foody",
    "version": "0.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Your app uses location services only when the app is running",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "b",
        "NSLocationAlwaysUsageDescription": "Your app uses location services all the time."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": ["CAMERA", "RECORD_AUDIO"]
    }
  }
}
